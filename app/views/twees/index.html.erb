<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Created on</th>
      <th colspan="3"> More actions</th>
    </tr>
  </thead>

  <tbody>
    <% @twees.each do |twee| %>
      <tr>
        <td><%= twee.content %></td>
        <td><%= twee.created_on %></td>
        <td><%= link_to 'Show', twee %></td>
        <td><%= link_to 'Edit', edit_twee_path(twee) %></td>
        <td><%= link_to 'Destroy', twee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Twee', new_twee_path %>
